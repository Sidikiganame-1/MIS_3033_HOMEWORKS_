<Window x:Class="JSON_POKEMON.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_POKEMON"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFAA9ED9">
        <Label x:Name="W" Content="weight" HorizontalAlignment="Left" Height="43" Margin="65,40,0,0" VerticalAlignment="Top" Width="141" FontSize="24"/>
        <Label x:Name="H" Content="height" HorizontalAlignment="Left" Height="57" Margin="65,130,0,0" VerticalAlignment="Top" Width="116" FontSize="24"/>
        <Image x:Name="Sprite" HorizontalAlignment="Left" Height="329" Margin="482,25,0,0" VerticalAlignment="Top" Width="302"/>
        <ComboBox x:Name="cboPokies" HorizontalAlignment="Left" Margin="170,25,0,0" VerticalAlignment="Top" Width="263" Height="346">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="#FF516B1C" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>

    </Grid>
</Window>
